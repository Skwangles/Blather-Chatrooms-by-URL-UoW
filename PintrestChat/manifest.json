{
  "name": "Pintrest Chat",
  "description": "Chat with people on the same board as you!",
  "version": "1.0",
  "manifest_version": 3,

  "content_scripts":[{
    "matches": ["<all_urls>"],
    "js":["Content.js"]
  }
  ],

  "action":{
    "default_popup":"popup.html",
    "default_title":"Pinterest Chat"
  }, 
  
  "permissions":[
    "tabs", "storage"
  ]

 
}
